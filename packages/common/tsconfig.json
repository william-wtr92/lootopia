{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "shared/**/*.ts",
    "index.ts"  
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}