    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "mime": "^4.0.6",
    "postgres": "^3.4.5",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lootopia/eslint-config-server": "workspace:*",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "azurite": "^3.33.0",
    "concurrently": "^9.1.2",
