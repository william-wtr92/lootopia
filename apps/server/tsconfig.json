{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@server/*": [
        "./src/*"
      ],
      "@common/*": [
        "../../packages/common/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts", 
    "hono.d.ts"  
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}